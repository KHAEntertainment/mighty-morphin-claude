{
	"name": "Mighty Morphin Claude Dev Container",
	"image": "mcr.microsoft.com/devcontainers/typescript-node:18",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
