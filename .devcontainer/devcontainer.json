{
  "name": "Mighty Morphin Claude Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "bash -lc 'test -f package-lock.json && npm ci || npm install'",
  "remoteEnv": {
    "NODE_PATH": "/usr/local/share/nvm/versions/node/current/lib/node_modules"
  }
}