{
  "name": "mighty-morphin-claude",
  "version": "0.1.0",
  "description": "Command/hook integration for MorphLLM FastApply",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "m-m_claude": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "prepare": "npm run build",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run test",
    "test": "jest",
    "setup:claude": "node dist/scripts/setupClaude.js",
