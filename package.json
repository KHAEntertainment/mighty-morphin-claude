  "engines": {
    "node": ">=18.18.0 || >=20.0.0"
  },
  "dependencies": {
    "commander": "^10.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.2.7",
    "keytar": "^7.9.0",
    "openai": "^4.56.0",
    "picocolors": "^1.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^30.1.3",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.1",
